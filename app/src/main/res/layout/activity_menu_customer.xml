<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="DRINK'S MENU"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="70px"
            android:fontFamily="@font/bubblegum_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="112dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"/>

    <TextView
            android:text="If you want one of menu, you can click feature Add."
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_toStartOf="@+id/addMenu"/>
    <TextView
            android:text="While after you added, so menu will showing below."
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="106dp"
            android:layout_toStartOf="@+id/addMenu"
            android:layout_marginLeft="20dp"/>

    <ImageView
            android:id="@+id/CartCustomer"
            android:src="@drawable/cart"
            android:background="@drawable/button_oval1"
            android:layout_width="70dp"
            android:elevation="5dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="153dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

    <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:background="@drawable/bg_5"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_menu_customer"
                tools:listitem="@layout/item_menu_customer"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--<include-->
            <!--layout="@layout/item_menu_order"-->
            <!--android:visibility="gone"-->
            <!--android:id="@+id/activity_order"/>-->
</RelativeLayout>