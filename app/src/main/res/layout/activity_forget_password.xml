<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/forgetpassword"
        android:background="@drawable/gradient_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/info1"
                android:text="Please you create your email is activated."
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/info2"
                android:layout_below="@+id/info1"
                android:text="You can reset your password."
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/email"
                android:layout_below="@+id/info2"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_react1"
                android:hint="Email"
                android:textColor="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="7dp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="70dp"/>
        <Button
                android:id="@+id/reset"
                android:layout_below="@+id/email"
                android:text="send password reset email"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_react2"
                android:layout_width="210dp"
                android:layout_height="70dp"/>
    </RelativeLayout>
</RelativeLayout>