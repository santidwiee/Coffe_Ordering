<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".Customer.DetailCustomerOrderActivity">

    <EditText
            android:id="@+id/namaCustomer"
            android:background="@drawable/button_react1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="Name Customer"
            android:padding="10dp"
            android:layout_height="50dp"/>

    <EditText
            android:id="@+id/telpCustomer"
            android:background="@drawable/button_react1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="Phone Number"
            android:padding="10dp"
            android:layout_height="50dp"/>

    <EditText
            android:id="@+id/alamatCustomer"
            android:background="@drawable/button_react1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="Detail Address"
            android:gravity="top"
            android:padding="10dp"
            android:layout_height="100dp"/>

    <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_confirm_order"
            android:text="Confrim Order"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="#fff"
            android:background="@drawable/button_react3"
            android:layout_height="wrap_content"/>

</LinearLayout>