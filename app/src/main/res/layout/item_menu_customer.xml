<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_oval"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/kopi_1"
            android:id="@+id/img_menuCustomer"/>

    <TextView
            android:id="@+id/checkMenuCustomer"
            android:text="Name Of Menu"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/bubblegum_sans"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/hargaMenuCustomer"
            android:text="Price Of Menu"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/bubblegum_sans"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Add to cart"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="center"
            android:background="@drawable/button_react3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextBuy"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>