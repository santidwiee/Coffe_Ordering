<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:autoStart="true"
            android:flipInterval="2000">
    </ViewFlipper>

    <ImageView
            android:src="@drawable/kopi_1"
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/viewFlipper"
            android:layout_marginBottom="10dp"/>

    <RelativeLayout
            android:background="@drawable/bg_5"
            android:layout_width="match_parent"
            android:layout_height="574dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="249dp"
            android:layout_marginStart="0dp">
        <TextView
                android:id="@+id/bintang"
                android:layout_marginLeft="30dp"
                android:text="4.5"
                android:textColor="@color/red"
                android:drawableRight="@drawable/star"
                android:drawablePadding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:layout_alignParentTop="true"/>

        <TextView
                android:text="THE COFFEE'S"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="40px"
                android:fontFamily="@font/arizonia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="88dp"
                android:layout_marginTop="35dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/bg_2"
            android:layout_width="match_parent"
            android:layout_height="483dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp">
        <TextView
                android:id="@+id/lokasi"
                android:layout_below="@+id/view1"
                android:drawableLeft="@drawable/location"
                android:textColor="@color/colorAccent"
                android:drawablePadding="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:text="12, RT.2/RW.12, Kalideres, Kec. Kalideres, Kota Jakarta Barat, Daerah Khusus Ibukota Jakarta 11840, Indonesia"
                android:textSize="15px"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/JamBuka"
                android:layout_below="@+id/lokasi"
                android:drawableLeft="@drawable/time"
                android:layout_marginLeft="20dp"
                android:drawablePadding="7dp"
                android:layout_marginTop="10dp"
                android:text="Senin-Jumat : 07.00 - 22.00 dan Sabut-Minggu : 09.00 - 22.00 "
                android:textSize="15px"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/Telpon"
                android:layout_below="@+id/JamBuka"
                android:drawableLeft="@drawable/call"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:drawablePadding="7dp"
                android:layout_marginTop="10dp"
                android:text="(+62) 2122529823"
                android:textSize="15px"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:id="@+id/view"
                android:layout_below="@+id/Telpon"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_width="380dp"
                android:layout_height="3dp"/>
        <Button
                android:id="@+id/menuCustomer"
                android:text="LIST MENU"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cabin_sketch"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_oval1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"/>
        <Button
                android:id="@+id/pesananCustomer"
                android:text="CART"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cabin_sketch"
                android:textStyle="bold"
                android:layout_below="@id/menuCustomer"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_oval1"
                android:layout_width="120dp"
                android:layout_height="100dp"/>
        <Button
                android:id="@+id/profileCustomer"
                android:text="PROFILE"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cabin_sketch"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_oval1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"/>
        <Button
                android:id="@+id/logoutCustomer"
                android:text="LOGOUT"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cabin_sketch"
                android:textStyle="bold"
                android:layout_below="@id/profileCustomer"
                android:layout_marginTop="34dp"
                android:background="@drawable/button_oval1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/profileCustomer"/>
        <ImageView
                android:id="@+id/imgMenuCustomer"
                android:elevation="5dp"
                android:src="@drawable/list2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="151dp"/>
        <ImageView
                android:id="@+id/imgPesananCustomer"
                android:elevation="5dp"
                android:src="@drawable/cart2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/menuCustomer"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"/>
        <ImageView
                android:id="@+id/imgProfileCustomer"
                android:elevation="5dp"
                android:src="@drawable/person2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="85dp"
                android:layout_alignTop="@+id/imgMenuCustomer"/>
        <ImageView
                android:id="@+id/imgLogoutCustomer"
                android:elevation="5dp"
                android:src="@drawable/exit2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="85dp"
                android:layout_alignTop="@+id/imgMenuCustomer"
                android:layout_marginTop="136dp"/>
        <View
                android:background="@color/colorAccent"
                android:layout_width="4dp"
                android:layout_height="250dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="204dp"
                android:layout_alignTop="@+id/menuCustomer"
                android:layout_marginTop="22dp"/>
    </RelativeLayout>

</RelativeLayout>